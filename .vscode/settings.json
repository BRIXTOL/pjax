  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.parameterHints.enabled": true,
    "editor.suggest.showModules": true,
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/pnpm-lock.yaml": true,
    "**/tests/public": true
    // "**/old": true
  },
