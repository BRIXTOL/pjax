{
  "npm.packageManager": "pnpm",
  "prettier.ignorePath": ".prettierignore",
  "stylelint.validate": [
    "scss",
    "sass",
    "less",
    "postcss"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.enable": false,
  "scss.validate": false,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "highlight.regexes": {
    "(?<=:{3,4}\\s)(grid|example|tabs|css|scss|html|note)": {
      "decorations": [
        {
          "color": "#81D4FA",
          "fontWeight": "900"
        }
      ]
    },
    "(?<=:{3,4}[a-z ]+)([colsxmd0-9-]+)": {
      "regexFlags": "g",
      "decorations": [
        {
          "color": "#91b5eb",
          "isWholeLine": true
        }
      ]
    },
    "(XHR)(?=\\.)": {
      "decorations": [
        {
          "color": "#81D4FA"
        }
      ]
    },
    "(?<=\\.)(\\$[a-zA-Z]+)": {
      "decorations": [
        {
          "color": "#c5c5c5"
        }
      ]
    },
    "\\b(connect|onmount|unmount)\\b(?=\\s*\\()": {
      "decorations": [
        {
          "color": "#58e093",
          "fontStyle": "bold"
        }
      ]
    },
