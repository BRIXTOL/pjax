{
  "name": "spx",
  "version": "0.0.2-beta.1",
  "private": false,
  "description": "Single Page XHR for enhancing SSR powered web applications using PushState + XHR",
  "homepage": "https://spx.js.org",
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ ",
  "keywords": [
    "spx",
    "xhr",
    "ssr",
    "navigation",
    "browser",
    "pushstate",
    "history",
    "stimulus",
    "turbo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/spx"
  },
  "bugs": {
    "url": "https://github.com/panoply/spx/issues"
  },
  "engines": {
    "node": "^16.0.0",
    "pnpm": "^7.0.0",
    "vscode": "^1.66.0"
  },
  "type": "module",
  "typings": "index.d.ts",
  "module": "./dist/spx.js",
  "exports": {
    "import": "./dist/spx.js"
  },
  "scripts": {
    "dev": "esbuild src/index.ts --outfile=spx.js --format=esm --bundle --watch",
    "build": "pnpm run prod && gzip-size spx.js --include-original",
    "prod": "esbuild src/index.ts --minify --tree-shaking=true --format=esm --bundle --outfile=spx.js",
    "dts": "tsc ./src/types/index.d.ts --emitDeclarationOnly --outFile=index.d.ts",
    "deploy": "pnpm run build && netlify deploy -p",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "browserslist": [
    "extends @brixtol/browserslist-config"
  ],
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "dist"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "ava": {
    "files": [
      "./test/route.test.js"
    ],
    "require": [
      "./test/__browser.js"
    ]
  },
  "dependencies": {
    "detect-it": "^4.0.1"
  },
  "devDependencies": {
    "@brixtol/browserslist-config": "workspace:*",
    "@brixtol/eslint-config": "workspace:*",
    "@brixtol/prettier-config": "workspace:*",
    "ava": "^4.2.0",
    "browser-env": "^3.3.0",
    "esbuild": "^0.14.38",
    "gzip-size-cli": "^5.1.0",
    "pr-release": "^0.18.9",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4"
  }
}
