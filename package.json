{
  "name": "spx",
  "version": "0.1.2-beta.1",
  "private": false,
  "description": "Single Page XHR for enhancing SSR powered web applications using PushState + XHR",
  "homepage": "https://spx.js.org",
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "keywords": [
    "spx",
    "xhr",
    "ssr",
    "navigation",
    "browser",
    "pushstate",
    "history",
    "stimulus",
    "turbo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/spx"
  },
  "bugs": {
    "url": "https://github.com/panoply/spx/issues"
  },
  "type": "module",
  "typings": "index.d.ts",
  "module": "./index.js",
  "exports": {
    "import": "./index.js"
  },
  "prettier": "@sissel/prettier-config",
  "eslintConfig": {
    "extends": "@sissel/eslint-config",
    "ignorePatterns": [
      "index.js"
    ],
    "rules": {
      "no-prototype-builtins": "off",
      "multiline-ternary": "off",
      "no-use-before-define": "off",
      "no-labels": [
        "error",
        {
          "allowLoop": true
        }
      ]
    }
  },
  "ava": {
    "files": [
      "./test/dom/connect.test.mjs"
    ]
  },
  "devDependencies": {
    "@sissel/eslint-config": "^1.2.1",
    "@sissel/prettier-config": "^1.2.5",
    "ava": "^6.1.1",
    "browser-env": "^3.3.0",
    "detect-it": "^4.0.1",
    "esbuild": "^0.20.0",
    "gzip-size-cli": "^5.1.0",
    "tsup": "^8.0.1",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup --minify --env.NODE_ENV production && gzip-size index.js --include-original",
    "deploy": "pnpm exec bin/docs.sh",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "optionalDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  }
}