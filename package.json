{
  "name": "spx",
  "version": "0.0.5-beta.1",
  "private": false,
  "description": "Single Page XHR for enhancing SSR powered web applications using PushState + XHR",
  "homepage": "https://spx.js.org",
  "license": "MIT",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ ",
  "keywords": [
    "spx",
    "xhr",
    "ssr",
    "navigation",
    "browser",
    "pushstate",
    "history",
    "stimulus",
    "turbo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/spx"
  },
  "bugs": {
    "url": "https://github.com/panoply/spx/issues"
  },
  "engines": {
    "node": "^14.0.0",
    "pnpm": "^7.0.0",
    "vscode": "^1.66.0"
  },
  "type": "module",
  "typings": "index.d.ts",
  "module": "./index.js",
  "exports": {
    "import": "./index.js"
  },
  "browserslist": [
    "extends @brixtol/browserslist-config"
  ],
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "index.js",
      "docs/public"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "no-prototype-builtins": "off",
      "multiline-ternary": "off"
    }
  },
  "ava": {
    "files": [
      "./test/route.test.js"
    ],
    "require": [
      "./test/__browser.js"
    ]
  },
  "dependencies": {
    "detect-it": "^4.0.1"
  },
  "devDependencies": {
    "@brixtol/browserslist-config": "workspace:^1.1.0",
    "@brixtol/eslint-config": "workspace:^1.2.5",
    "@brixtol/prettier-config": "workspace:^1.2.1",
    "@octokit/core": "^4.2.0",
    "ava": "^5.2.0",
    "browser-env": "^3.3.0",
    "esbuild": "^0.17.8",
    "gzip-size-cli": "^5.1.0",
    "pr-release": "^0.18.20",
    "type-fest": "^3.6.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "dev": "esbuild src/index.ts --outfile=index.js --format=esm --bundle --watch",
    "build": "pnpm run prod && gzip-size index.js --include-original",
    "prod": "esbuild src/index.ts --minify --tree-shaking=true --format=esm --bundle --outfile=index.js",
    "deploy": "pnpm exec bin/docs.sh",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "optionalDependencies": {
    "eslint": "^8.34.0",
    "prettier": "^2.8.4"
  }
}
