{
  "name": "spx",
  "version": "1.0.0-beta.1",
  "private": false,
  "description": "SPX (Single Page XHR) is new generation Pjax (Push~State Ajax) solution for SSR rendered web applications.",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "owner": "BRIXTOL TEXTILES",
  "license": "MIT",
  "type": "module",
  "types": "./package/types/index.d.ts",
  "module": "./package/spx.js",
  "browser": "./package/spx.js",
  "exports": {
    "import": "./package/spx.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "pnpm run prod && gzip-size package/spx.js --include-original",
    "prod": "esbuild src/index.ts --minify --tree-shaking=true --format=esm --bundle --outfile=package/spx.js",
    "deploy": "pnpm run build && netlify deploy -p",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "browserslist": [
    "extends @brixtol/browserslist-config"
  ],
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "ava": {
    "files": [
      "./tests/route.test.js"
    ],
    "require": [
      "./tests/__browser.js"
    ]
  },
  "dependencies": {
    "detect-it": "^4.0.1"
  },
  "devDependencies": {
    "@brixtol/browserslist-config": "workspace:^1.0.3",
    "@brixtol/eslint-config": "workspace:^1.2.0",
    "@brixtol/prettier-config": "workspace:^1.2.0",
    "@brixtol/rollup-utils": "workspace:^1.0.0",
    "@brixtol/tsconfig": "workspace:^1.2.0",
    "ava": "^4.2.0",
    "browser-env": "^3.3.0",
    "gzip-size-cli": "^5.1.0",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.3"
  }
}
