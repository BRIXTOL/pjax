{
  "name": "@brixtol/pjax",
  "version": "0.2.0-beta.1",
  "private": false,
  "description": "A modern next generation pjax solution for SSR web applications",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "owner": "BRIXTOL TEXTILES",
  "license": "MIT",
  "type": "module",
  "types": "./package/@types/index.d.ts",
  "main": "./package/pjax.esm.js",
  "module": "./package/pjax.esm.js",
  "browser": "./package/pjax.umd.js",
  "scripts": {
    "dev": "rollup -c -w",
    "prod": "rollup -c -w --environment prod",
    "build": "rollup -c --environment prod",
    "deploy": "pnpm run build && netlify deploy -p",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "browserslist": [
    "extends @brixtol/browserslist-config"
  ],
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "ava": {
    "files": [
      "tests/shopify.js"
    ],
    "require": [
      "esm"
    ]
  },
  "esm": {
    "cjs": true
  },
  "dependencies": {
    "detect-it": "^4.0.1",
    "event-from": "^1.0.0",
    "history": "^5.1.0",
    "loadjs": "^4.2.0",
    "matchit": "^1.1.0",
    "mergerino": "^0.4.0",
    "nanoid": "^3.1.30",
    "nprogress": "^0.2.0"
  },
  "devDependencies": {
    "@brixtol/browserslist-config": "workspace:^1.0.3",
    "@brixtol/eslint-config": "workspace:^1.0.1",
    "@brixtol/prettier-config": "workspace:^1.2.0",
    "@brixtol/rollup-utils": "workspace:^1.0.0",
    "@brixtol/tsconfig": "workspace:^1.2.0",
    "@types/loadjs": "^4.0.1",
    "@types/nprogress": "^0.2.0",
    "ava": "^3.15.0",
    "esm": "^3.2.25",
    "rollup": "^2.60.2",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "ava": "^3.13.0",
    "esm": "^3.2.25",
    "rollup": "^2.26.11"
  }
}
