{
  "name": "@brixtol/pjax",
  "version": "0.3.0-beta.1",
  "private": false,
  "description": "A modern next generation pjax solution for SSR web applications",
  "author": "ΝΙΚΟΛΑΣ ΣΑΒΒΙΔΗΣ",
  "owner": "BRIXTOL TEXTILES",
  "license": "MIT",
  "type": "module",
  "types": "./package/types/index.d.ts",
  "module": "./package/pjax.js",
  "browser": "./package/pjax.js",
  "exports": {
    "import": "./package/pjax.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "pnpm run prod && gzip-size package/pjax.js --include-original",
    "prod": "esbuild src/index.ts --minify --format=esm --bundle --outfile=package/pjax.js",
    "deploy": "pnpm run build && netlify deploy -p",
    "test": "ava --color --verbose --watch --timeout=2m"
  },
  "browserslist": [
    "extends @brixtol/browserslist-config"
  ],
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "package"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "multiline-ternary": "off"
    }
  },
  "ava": {
    "files": [
      "tests/shopify.js"
    ],
    "require": [
      "esm"
    ]
  },
  "esm": {
    "cjs": true
  },
  "dependencies": {
    "detect-it": "^4.0.1",
    "event-from": "^1.0.0",
    "gzip-size-cli": "^5.1.0",
    "history": "^5.3.0"
  },
  "devDependencies": {
    "@brixtol/browserslist-config": "workspace:^1.0.3",
    "@brixtol/eslint-config": "workspace:^1.2.0",
    "@brixtol/prettier-config": "workspace:^1.2.0",
    "@brixtol/rollup-utils": "workspace:^1.0.0",
    "@brixtol/tsconfig": "workspace:^1.2.0",
    "@types/loadjs": "^4.0.1",
    "@types/nprogress": "^0.2.0",
    "ava": "^4.1.0",
    "esm": "^3.2.25",
    "rollup": "^2.70.1",
    "type-fest": "^2.12.1",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "ava": "^3.13.0",
    "esm": "^3.2.25",
    "rollup": "^2.26.11"
  }
}
