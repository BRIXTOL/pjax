<div class="row mx-1">
  <div class="col-7">
    <div
      class="row mt-b"
      spx-component="update"
      spx-update:count="0"
      spx-update:color="black"
      spx-update:label="{{ title }}">

      <div class="col tc py-3 bd rd mr-3">
        <h6 class="fw-bold fc-gray fs-sm mb-3">
          Label:
        </h6>
        <span spx-node="update.label">
          {{ title }}
        </span>
      </div>

      <div class="col tc py-3 bd rd mr-3">
        <h6 class="fw-bold fc-gray fs-sm mb-3">
          Counter:
        </h6>
        <code
          class="fs-lg"
          spx-bind="update.count">0</code>
      </div>

      <div class="col tc py-3 bd rd">
        <h6 class="fw-bold fc-gray fs-sm mb-3">
          Color:
        </h6>
        <span
          class="py-2 px-4 bd"
          spx-node="update.color"></span>
      </div>

    </div>
  </div>
</div>