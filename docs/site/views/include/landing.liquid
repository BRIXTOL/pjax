<main
  id="main"
  class="container-fluid">
  <div class="row vh-100 d-flex ai-center jc-center px-5">
    <div class="hero d-grid ai-center col-6 m-auto">
      <div class="hero-github">
        <a href="https://github.com/panoply/spx">
          {% svg 'github', 'icon icon-github' %}
        </a>
      </div>

      <div class="d-flex flex-col as-center jc-center">
        <div class="line"></div>
        <a
          data-spx-target="['body']"
          data-tooltip="right"
          aria-label="Documentation"
          href="/introduction/what-is-spx/"
          class="hero-logo d-block m-auto">
          {% svg "logo" %}
        </a>


      </div>

      <div class="d-flex flex-column m-auto tc fw-lighter">
        <h5 class="d-block italic uncase mt-2" style="font-weight: 200;">
          {{ content }}
        </h5>
      </div>
      <div class="d-flex flex-column m-auto cli mt-1">
        <pre class="language-bash py-2"><code class="language-bash fc-white">pnpm add spx</code></pre>
      </div>


    </div>
    <div class="version">
      {% version %}
    </div>

  </div>

</main>