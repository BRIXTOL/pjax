<main
  id="main"
  class="container-fluid">
  <div class="row vh-100 d-flex ai-center jc-center px-5">
    <div class="hero d-grid ai-center col-6 m-auto">
      <div class="hero-github">
        <a href="https://github.com/panoply/spx">
          {% svg 'github', 'icon icon-github' %}
        </a>
      </div>

      <div class="d-flex flex-column as-center jc-center hero-logo">
        <a
          data-spx-target="['body']"
          href="/introduction/what-is-spx/"
          class="hero-logo d-block">
          {% svg "logo" %}
        </a>
      </div>

      <div class="d-flex flex-column m-auto tc fw-lighter">
        <h5 class="d-block italic fw-normal light uncase mt-2">
          {{ content }}
        </h5>
      </div>

      <div class="d-flex flex-column m-auto cli mt-3">
        <pre class="language-bash py-3"><code class="language-bash">pnpm add spx</code></pre>
      </div>

    </div>
    <div class="version">
      <small class="fs-xs">
        V
      </small>
      0.1.0
    </div>
  </div>
</main>