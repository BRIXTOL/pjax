{
  "name": "spx-docs",
  "version": "1.0.0",
  "private": true,
  "description": "SPX Documentation",
  "author": "",
  "license": "ISC",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@brixtol/bootstrap"
      ]
    }
  },
  "dependencies": {
    "@accede-web/tablist": "^2.0.1",
    "@brixtol/bootstrap": "^1.4.0",
    "@hotwired/stimulus": "^3.0.1",
    "@panoply/accordion": "^0.2.0",
    "@pgrabovets/json-view": "^2.7.1",
    "json-tree": "^0.5.1",
    "spx": "link:.."
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@brixtol/browserslist-config": "^1.1.0",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@sardine/eleventy-plugin-tinyhtml": "^0.2.0",
    "@types/browser-sync": "^2.26.3",
    "autoprefixer": "^10.4.6",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "eleventy-plugin-svg-sprite": "^1.2.2",
    "esbuild": "^0.14.38",
    "markdown-it": "^13.0.0",
    "markdown-it-anchor": "^8.6.2",
    "netlify-cli": "^10.1.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "sass": "^1.51.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "optionalDependencies": {
    "stylelint": "^14.8.1"
  },
  "scripts": {
    "dev": "rm -rf public && concurrently \"pnpm run netlify:serve\" \"pnpm run js:watch\" \"pnpm run sass:watch\" \"pnpm run 11ty:watch\"",
    "build": "rm -rf public && pnpm run js:build && pnpm run sass:build && pnpm run 11ty:build && pnpm run postbuild",
    "postbuild": "postcss --config scripts/postcss.config.cjs public/style.css -r --no-map && rm -rf public/style.css.map",
    "netlify:serve": "netlify dev -c \"eleventy --config=scripts/eleventy.cjs --watch --serve --watch\" --targetPort 8080",
    "11ty:watch": "eleventy --config=scripts/eleventy.cjs --watch",
    "11ty:build": "eleventy --config=scripts/eleventy.cjs",
    "js:build": "esbuild site/app/index.ts --outfile=public/bundle.min.js --format=esm --bundle --minify",
    "js:watch": "esbuild site/app/index.ts --outfile=public/bundle.min.js --format=esm --bundle --watch",
    "sass:build": "sass --load-path=node_modules/ site/sass/stylesheet.scss public/style.css --no-source-map",
    "sass:watch": "sass --load-path=node_modules/ site/sass/stylesheet.scss public/style.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
