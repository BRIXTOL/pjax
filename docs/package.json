{
  "name": "spx-docs",
  "version": "1.0.0",
  "private": true,
  "description": "SPX Documentation",
  "scripts": {
    "dev": "concurrently \"pnpm run js:watch\" \"pnpm run sass:watch\" \"pnpm run 11ty:watch\"",
    "build": "pnpm run js:build && pnpm run sass:build && pnpm run 11ty:build && pnpm run postbuild",
    "postbuild": "postcss public/stylesheet.css -r --no-map && rm -rf public/stylesheet.css.map",
    "11ty:watch": "eleventy --config=.eleventy.cjs --serve",
    "11ty:build": "eleventy --config=.eleventy.cjs",
    "js:build": "esbuild site/scripts/index.ts --outfile=public/bundle.min.js --format=esm --bundle --minify",
    "js:watch": "esbuild site/scripts/index.ts --outfile=public/bundle.min.js --format=esm --bundle --watch",
    "sass:build": "sass --load-path=node_modules/ site/styles:public --no-source-map",
    "sass:watch": "sass --load-path=node_modules/ site/styles:public --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "prettier": "@brixtol/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "public"
    ],
    "extends": "@brixtol/eslint-config"
  },
  "dependencies": {
    "spx": "link:.."
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@brixtol/bootstrap": "^1.2.1",
    "@brixtol/browserslist-config": "workspace:^1.1.0",
    "@brixtol/eslint-config": "^1.2.4",
    "@brixtol/prettier-config": "^1.2.1",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@types/browser-sync": "^2.26.3",
    "autoprefixer": "^10.4.5",
    "concurrently": "^6.4.0",
    "esbuild": "^0.14.38",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "sass": "^1.51.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-scss": "^4.2.0"
  },
  "optionalDependencies": {
    "eslint": "^8.14.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.1"
  }
}
