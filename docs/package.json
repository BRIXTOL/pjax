{
  "name": "spx-docs",
  "version": "1.0.0",
  "private": true,
  "description": "SPX Documentation",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "rm -rf public && concurrently \"pnpm run js:watch\" \"pnpm run sass:watch\" \"pnpm run 11ty:watch\"",
    "build": "rm -rf public && pnpm run js:build && pnpm run sass:build && pnpm run 11ty:build && pnpm run postbuild",
    "postbuild": "postcss --config scripts/postcss.config.cjs public/style.css -r --no-map && rm -rf public/style.css.map",
    "netlify:serve": "netlify dev -c \"eleventy --config=scripts/eleventy.cjs --watch --serve --watch\" --targetPort 8080",
    "11ty:watch": "eleventy --serve --watch",
    "11ty:build": "eleventy",
    "js:build": "esbuild site/app/index.ts --outfile=public/bundle.min.js --format=esm --bundle --minify",
    "js:watch": "esbuild site/app/index.ts --outfile=public/bundle.min.js --format=esm --bundle --watch",
    "sass:build": "sass --load-path=node_modules/ site/sass/stylesheet.scss public/style.css --no-source-map",
    "sass:watch": "sass --load-path=node_modules/ site/sass/stylesheet.scss public/style.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "stylelint": {
    "extends": [
      "@sissel/stylelint-config"
    ],
    "ignoreFiles": [
      "public",
      "node_modules"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "index.js",
      "docs/public"
    ],
    "extends": "@brixtol/eslint-config",
    "rules": {
      "no-prototype-builtins": "off",
      "multiline-ternary": "off"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@brixtol/bootstrap"
      ]
    }
  },
  "dependencies": {
    "@accede-web/tablist": "^2.0.1",
    "@brixtol/bootstrap": "workspace:^",
    "@hotwired/stimulus": "^3.2.1",
    "relapse": "^0.5.0",
    "spx": "link:.."
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@brixtol/browserslist-config": "workspace:^",
    "@brixtol/eslint-config": "workspace:^",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@panoply/11ty": "^0.2.0",
    "@sardine/eleventy-plugin-tinyhtml": "^0.2.0",
    "@sissel/stylelint-config": "^1.1.0",
    "@types/browser-sync": "^2.27.0",
    "@types/markdown-it": "^12.2.3",
    "@types/prismjs": "^1.26.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.1",
    "eleventy-plugin-svg-sprite": "^2.4.0",
    "esbuild": "^0.17.18",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^3.0.0",
    "netlify-cli": "^15.0.2",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "sass": "^1.62.1"
  },
  "optionalDependencies": {
    "stylelint": "^15.6.1"
  }
}
