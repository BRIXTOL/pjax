<div class="row ai-center g-0 bd bb-0 py-2 pb-2 rd-t mx-1 mt-4 bg-code">
  <h6
    class="col-auto px-3 mr-5 mb-0 pl-4 fs-md fc-gray"
    style="width: 130px;">
    Directive
  </h6>
  <h6
    class="col-auto px-3 mr-5 mb-0 pl-4 fs-md fc-gray"
    style="width: 130px;">
    Type
  </h6>
  <h6 class="col-8 mb-0 fs-md pl-3 fc-gray">
    Attrs
  </h6>
</div>
{% for item in events.attrs %}
  <div class="row ai-center gx-0 by py-3 mx-1 bx {% if forloop.last %}mb-4{% endif %}">
    <code class="col-auto px-3 py-1 ml-3 mr-5 tc">
      {{ item.input }}
    </code>
    <code
      class="col-auto px-3 py-1 ml-3 mr-5 fw-bolder tc type-{{ item.type }}"
      style="width: 100px;">
      {{ item.type }}
    </code>
    <code class="col-auto px-3 py-1 ml-3 mr-5 fw-bolder tc fc-green">
      {{ item.attrs }}
    </code>
    <div class="col-auto">
      {{ item.output }}
    </div>
  </div>
{% endfor %}