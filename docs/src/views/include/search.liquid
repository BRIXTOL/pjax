<div class="container-fluid search-sticky">
  <div class="row ai-center d-none d-xl-flex mt-3 mr-3">
    <div class="col-auto ml-auto">
      <div
        class="search"
        spx-component="search"
        spx-search:source="{{ '/spx.json' | url }}"
        spx@window:keydown="search.onKeyboard">
        <input
          type="search"
          name="search"
          class="fm-input"
          placeholder="Search"
          spx@input="search.onInput"
          spx@click="search.onFocus"
          spx-node="search.input">
        <div class="keys">
          <div class="row jc-center ac-center">
            <kbd class="col-auto">âŒ˜</kbd>
            <kbd class="col-auto letters">K</kbd>
          </div>
        </div>
        <ul
          class="search-list d-none"
          spx-node="search.list">
          <li class="h-100 d-flex js-center">
            Search
          </li>
        </ul>

      </div>
    </div>
  </div>
</div>