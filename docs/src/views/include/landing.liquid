<main
  id="main"
  class="container-fluid">
  <button
    type="button"
    class="btn hero-drawer ml-2 d-flex d-sm-none p-0"
    spx@click="drawer.toggle">
    {%- svg 'menu', 'icon-menu' -%}
  </button>

  <div class="row vh-100 d-flex ai-center jc-center px-sm-5 hidden">
    <div class="hero d-grid ai-center col-11 col-xl-6 m-auto">

      <div class="row jc-end ai-center w-100 links mr-2">

        <a
          class="col-auto tr"
          href="{{ navigation.github.url }}"
          data-tooltip="bottom"
          aria-label="{{ navigation.github.title }}"
          target="_blank">
          {%- svg 'github', 'icon-github' -%}
        </a>
      </div>

      <div class="d-flex flex-col as-center jc-center">

        <div class="line"></div>

        <a
          spx-disable="true"
          href="/what-is-spx/"
          class="hero-logo d-block m-auto mb-3">
          {%- svg 'logo' -%}
        </a>

      </div>

      <div class="d-flex flex-column m-auto tc fw-lighter pb-2">
        <span class="ff-base d-block uncase mt-1 hero-caption d-none d-sm-block">
          {{ content }}
        </span>
      </div>

      <div class="row my-4 jc-center ai-center">
        <a
          spx-disable="true"
          href="/what-is-spx/"
          class="col-5 col-md-2 goto-link tc">
          Documentation
        </a>
        <span class="col-12 col-md-auto fs-xs fc-gray ff-heading tc px-3 my-3 my-sm-0">OR</span>
        <a
          spx-disable="true"
          href="/tutorial/"
          class="col-5 col-md-2 goto-link">
          Tutorial
        </a>
      </div>

    </div>
    <div class="version upper fc-dark-gray ff-head">
      {{ pkg.version | prepend: 'version ' }}
    </div>

  </div>

</main>