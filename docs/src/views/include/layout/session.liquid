<div spx-component="session" class="w-100">

  <div spx-component="tabs" class="tabs">

    <nav
      spx-node="tabs.panel"
      role="tablist"
      class="row g-0 session-tabs">
      <button
        class="btn col-6"
        aria-controls="store"
        aria-selected="true"
        role="tab"
        type="button">
        Session
      </button>
      <button
        class="btn col-6"
        aria-controls="logs"
        aria-selected="false"
        role="tab"
        type="button">
        Events
      </button>
    </nav>

    <div
      id="store"
      role="tabpanel"
      aria-hidden="false"
      class="session-details">

      <div class="memory bd-bottom px-3 py-4">
        <div class="row">
          <div class="col-2 fs-sm upper">
            Cache
          </div>
          <div class="col fs-sm fc-pink" spx-node="session.memory"></div>
        </div>
        <div class="row">
          <div class="col-2 fs-sm upper">
            Visits
          </div>
          <div class="col fs-sm fc-pink" spx-node="session.visits"></div>
        </div>
      </div>

      <div class="session-accordion" spx-node="session.relapse">

        {% assign tabs = 'pages,snapshots,components,history' | split: ',' %}

        {% for item in tabs %}
          <details>
            <summary>
              {% if item == 'history' %}
                {{ item }} API
              {% else %}
                {{ item }}
              {% endif %}
            </summary>
            <section>
              <div class="session-inner">
                <div
                  id="{{ item }}"
                  class="px-2 py-4 session-scroll"
                  spx-node="session.{{- item -}}"></div>
              </div>
            </section>
          </details>

        {% endfor %}

      </div>

    </div>

    <div
      id="logs"
      role="tabpanel"
      aria-hidden="true"
      class="session-log">

      {% assign logs = 'active, action, logs' | split: ',' %}

      {% for item in logs %}

        <div class="d-flex {{ item }} bd-bottom" spx-node="session.{{- item -}}">
          {{ item }}
        </div>

      {% endfor %}
    </div>

  </div>
</div>