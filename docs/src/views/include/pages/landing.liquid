<main id="main" class="container-fluid">
  <div class="row vh-100 d-flex ai-center jc-center px-sm-5">
    <div class="hero d-grid ai-center col-11 col-xl-6 m-auto">
      <div class="hero-github">
        <a href="https://github.com/panoply/spx">
          {% svg 'github', 'icon icon-github' %}
        </a>
      </div>

      <div class="d-flex flex-col as-center jc-center">

        <div class="line"></div>

        <a
          spx-target="['body']"
          data-tooltip="right"
          aria-label="Documentation"
          href="/introduction/what-is-spx/"
          class="hero-logo d-block m-auto">
          {% svg 'logo' %}
        </a>

      </div>

      <div class="d-flex flex-column m-auto tc fw-lighter">
        <h3 class="ff-base d-block italic uncase mt-1" style="font-weight: 300;">
          {{ content }}
        </h3>
      </div>

      <div class="d-flex flex-column m-auto cli mt-1">
        <code class="language-bash fc-white px-4 py-1">pnpm add spx</code>
      </div>

    </div>
    <div class="version">
      {% version %}
    </div>

  </div>

</main>