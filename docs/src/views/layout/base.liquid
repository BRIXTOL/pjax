{% if page.url == '/' %}
  {% assign drawer = '' %}
{% else %}
  {% assign drawer = 'drawer-active' %}
{% endif %}

<!DOCTYPE html>
<html lang="en">

  <head>
    <title>
      {{ title }}
    </title>

    <meta charset="UTF-8">
    <meta
      name="description"
      content="{{ description }}">
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0">
    <link
      href="https://fonts.googleapis.com"
      rel="preconnect">
    <link
      href="https://fonts.gstatic.com"
      crossorigin
      rel="preconnect">
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap"
      rel="stylesheet"
      spx-eval="false">
    <link
      href="{{'/style.css' | url }}"
      rel="stylesheet"
      spx-eval="false">
    <script
      src="{{'/bundle.min.js' | url }}"
      spx-eval="false"
      async></script>

    {% include 'examples/script-evaluation' %}

  </head>

  <body>

    {% if page.url == '/' %}

      {% include 'pages/landing' %}

    {% else %}

      {% include 'navbar' %}

      <div class="container-fluid container-wrapper">
        <aside
          id="sidenav"
          class="px-0 vh-100 bt br d-none d-sm-block sidebar drawer-left drawer-panel"
          spx-component="drawer"
          spx-drawer:direction="left"
          spx-drawer:width="250px">
          {% include 'sidebar' %}
        </aside>
        <div class="row jc-center content-offset px-xxl-4">
          <main
            id="content"
            class="col-11 col-md-12 px-xl-5 pb-4">
            {% include 'breadcrumb' %}
            {{ content }}
            {% include 'navigate' %}
          </main>
        </div>
        <aside
          id="session"
          class="session vh-100 bl d-none d-xxl-flex">
          {% include 'session' %}
        </aside>
      </div>

    {% endif %}

    {% sprite %}

  </body>
</html>