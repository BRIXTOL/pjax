{
  "exclude": [
    "node_modules/**",
    "tsplugin/**"
  ],
  "include": [
    "types/*.ts",
    "src/**/*.ts",
    "docs/src/app/**/*.ts",
    "test/**/*.ts",
  ],
  "typeAcquisition": {
    "enable": true,
  },
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "target": "ES2018",
    "lib": [
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "types": [
        "types/types.d.ts",
      ]
    }
  }
}