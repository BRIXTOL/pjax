{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "noEmit": true,
    "suppressExcessPropertyErrors": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "tests/*"
      ],
      "~app": [
        "./src/app/*"
      ],
      "~constant": [
        "./src/constants/*"
      ],
      "~observer/*": [
        "./src/observers/*"
      ]
    }
  }
}
