{
  "exclude": ["node_modules/**", "test", "docs"],
  "include": ["src/**/*.ts", "types/*"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2020", "dom", "dom.iterable"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "index.d.ts",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "types": ["src/types"]
    }
  }
}
