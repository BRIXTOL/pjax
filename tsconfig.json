{
  "exclude": [
    "node_modules/**",
    "cheerio",
    "docs"
  ],
  "include": [
    "src/**/*.ts",
    "types/*",
    "docs/src/app/**/*.ts",
    "test/assets/**/*.ts"
  ],
  "compilerOptions": {
    "incremental": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "target": "ES2017",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "paths": {
      "types": [
        "./src/types/index.d.ts"
      ]
    }
  }
}